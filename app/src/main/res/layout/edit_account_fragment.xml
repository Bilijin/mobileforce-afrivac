<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editAccountInfoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f2f6ff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="@dimen/dimension_20dp">


            <TextView
                android:id="@+id/my_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="@dimen/dimension_104"
                android:fontFamily="@font/poppins"
                android:text="@string/my_account"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_18sp" />

            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_account"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/azeez_adeleke"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/txtSize" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/full_name"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:drawableStart="@drawable/place"
                android:drawableTint="#8352fd"
                android:fontFamily="@font/poppins"
                android:text="@string/nigeria"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/txtSize" />

            <ImageView
                android:id="@+id/profile_image1"
                android:layout_width="@dimen/profile_image"
                android:layout_height="@dimen/profile_image"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimension_30dp"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:contentDescription="@string/user_image"
                android:src="@drawable/pics"/>

            <ImageView
                android:layout_width="@dimen/dimension_36dp"
                android:layout_height="@dimen/dimension_36dp"
                android:layout_alignStart="@id/profile_image1"
                android:layout_alignBottom="@+id/profile_image1"
                android:adjustViewBounds="true"
                android:backgroundTint="#000000"
                android:src="@drawable/ic_baseline_add_a_photo_24"  />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension_40dp"
                android:layout_below="@+id/profile_image1"
                android:layout_alignStart="@id/profile_image1"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:background="@drawable/curved_edge"
                android:padding="@dimen/dimension_10dp"
                android:text="@string/saveProf"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#FFFFFF"  />


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_save"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="@dimen/dimension_10dp"
                android:text="@string/username"
                android:textColor="#000000"
                android:textSize="@dimen/dimension_14sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/user_name_edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/username"
                android:layout_alignEnd="@+id/view"
                android:layout_toEndOf="@+id/username"
                android:autofillHints="@string/username"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawableTint="@color/colorLightGrey"
                android:hint="@string/azeez_adeleke"
                android:inputType="text"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/txtSize" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/username"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="@dimen/dimension_20dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="@dimen/dimension_14sp" />

            <TextView
                android:id="@+id/edit_email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/email"
                android:layout_alignEnd="@+id/email_view"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:layout_toEndOf="@+id/email"
                android:textColor="@color/black"
                android:autofillHints="@string/enter_email"
                android:background="@android:color/transparent"
                android:hint="@string/azeez_hng_com"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/txtSize"
                tools:ignore="TextFields" />


            <View
                android:id="@+id/email_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_view"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="@dimen/dimension_20dp"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="@dimen/dimension_14sp" />

            <EditText
                android:id="@+id/edit_phone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/phone"
                android:layout_alignEnd="@+id/phone_view"
                android:layout_toEndOf="@+id/phone"
                android:autofillHints="@string/phone"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawableTint="@color/colorLightGrey"
                android:hint="@string/phoneNumb"
                android:textColor="@color/black"
                android:inputType="number"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/txtSize"
                tools:ignore="TextFields" />

            <View
                android:id="@+id/phone_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phone"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:background="@color/colorGrey" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_view"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="@dimen/dimension_20dp"
                android:text="@string/country"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="@dimen/dimension_14sp" />

            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/country"
                android:layout_alignEnd="@+id/country_view"
                android:drawableStart="@drawable/nigeria_flag"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawableTint="@color/colorLightGrey"
                android:text=""
                android:textSize="@dimen/txtSize" />

            <View
                android:id="@+id/country_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/country"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:background="@color/colorGrey" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country_view"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="@dimen/dimension_20dp"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="@dimen/dimension_14sp" />

            <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/gender"
                android:layout_alignEnd="@+id/gender_view"
                android:layout_toEndOf="@+id/gender"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawableTint="@color/colorLightGrey"
                android:text="@string/male"
                android:textColor="@color/black"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/txtSize" />

            <View
                android:id="@+id/gender_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/gender"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/dimension_10dp"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_view"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:layout_marginTop="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="@dimen/dimension_20dp"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:textSize="@dimen/dimension_14sp" />

            <TextView
                android:id="@+id/user_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/language"
                android:layout_alignEnd="@+id/gender_view"
                android:layout_toEndOf="@+id/language"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:drawableTint="@color/colorLightGrey"
                android:text="@string/english"
                android:textColor="@color/black"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/txtSize" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>