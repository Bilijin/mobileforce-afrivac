<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10"
        tools:ignore="UseCompoundDrawables">


        <!--TODO use onClick or onClickListener to see the answers to the questions-->
        <TextView
            android:id="@+id/questions_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimension_20dp"
            android:layout_marginRight="@dimen/dimension_20dp"
            android:drawableStart="@drawable/ic_baseline_message_24"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="How many people can join a tour?" />
        <!--TODO: use setVisibility to get the visibility of the spinner-->
        <ImageView
            android:id="@+id/arrow_down_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_20dp"
            android:layout_weight="9"
            android:contentDescription="@string/arrow_down"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <!--TODO: use setVisibility to get the visibility of the view-->
        <View
            android:id="@+id/answers_view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/dimension_50dp"
            android:background="@android:color/darker_gray" />
        <!--TODO: use setVisibility to get the visibility of the message-->
        <TextView
            android:id="@+id/answer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_5dp"
            android:layout_marginStart="@dimen/dimension_50dp"
            android:baselineAligned="false"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/colorGrey"
            tools:text="hello, here what er have for" />
    </LinearLayout>

</LinearLayout>


